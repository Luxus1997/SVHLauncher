<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="#CFA55C" />
            <corners android:radius="@dimen/dp_10" />
        </shape>
    </item>
    <!-- not selected -->
    <item>
        <shape>
            <solid android:color="@color/white" />
            <corners android:bottomLeftRadius="@dimen/dp_8" android:bottomRightRadius="@dimen/dp_8" android:topLeftRadius="@dimen/dp_8" android:topRightRadius="@dimen/dp_8" />
            <stroke android:width="@dimen/dp_1" android:color="@color/color_66" />
        </shape>
    </item>
</selector>